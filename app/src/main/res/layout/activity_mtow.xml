<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.MtowActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#F3F4F3F3"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#37DFF4"
            android:layout_height="170dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="100dp">

                <androidx.appcompat.widget.SearchView
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:background="#37DFF4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dubai (DXB)  - Basaso Internationl Airport" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:weightSum="4"
                        android:layout_height="20dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:hint="Mon Sep 18"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="1 Adult"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="One Way"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8DE8DF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:padding="5dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.6"
                    android:layout_margin="10dp"
                    android:text="TOTAL PRICE"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_margin="10dp"
                    android:text="$"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="5"
            android:layout_margin="15dp"
            android:layout_height="80dp">

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:text="Departing Flight"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
               android:layout_marginTop="27dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:src="@drawable/baseline_calendar_today_24"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:src="@drawable/baseline_calendar_today_24"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="USD"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="130dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="7dp"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:hint="18"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:hint="Sep,"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:hint="Mon"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:hint="18"
                            android:layout_marginTop="10dp"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout

                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="match_parent"
                            android:hint="18"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"

                                android:hint="Sep,"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"

                                android:hint="Tus"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:hint="$ 400.00"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout

                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:hint="18"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:hint="Sep,"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:hint="Wen"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:hint="18"
                            android:layout_marginTop="10dp"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@drawable/bc"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@drawable/bc"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_height="220dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="7dp"
                android:layout_height="220dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:layout_height="120dp">
                        <LinearLayout
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_margin="9dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:hint="06:30"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:hint="Dubai"
                                android:layout_marginTop="8dp"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:hint="18/09/2023"
                                android:layout_marginTop="8dp"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_weight="0.2"
                                    android:layout_width="0dp"
                                    android:src="@drawable/baseline_error_outline_24"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_weight="1.8"
                                    android:layout_width="0dp"
                                    android:text="Flight Info"
                                    android:textSize="12sp"
                                    android:padding="3dp"
                                    android:textColor="#37DFF4"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_width="0dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/air"
                                android:backgroundTint="@color/white"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:layout_margin="9dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:hint="06:30"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="right"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:hint="Bosaso"
                                android:gravity="right"
                                android:layout_marginTop="8dp"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:hint="18/09/2023"
                                android:layout_marginTop="8dp"
                                android:textSize="12sp"
                                android:gravity="right"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"

                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#F3C6C1C1"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:hint="2h 45m"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"/>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#F3C6C1C1"/>

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:hint="Nonstop"
                                    android:textSize="12sp"
                                    android:gravity="right"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F3F3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="3"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1.5"
                                android:layout_width="0dp"
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:hint="BEST OFFER"
                                        android:layout_marginLeft="35dp"
                                        android:layout_marginRight="35dp"
                                        android:background="#3FCB45"
                                        android:textSize="13sp"
                                        android:textColor="@color/white"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_weight="1.7"
                                        android:layout_width="0dp"
                                        android:hint="ECONOMY"
                                        android:gravity="center"
                                        android:textSize="13sp"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_weight="0.3"
                                        android:layout_width="0dp"
                                        android:hint="$"
                                        android:textSize="13sp"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:text="From"
                                        android:textColor="#ED2828"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:gravity="center_horizontal"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:hint="$ 318.00"
                                    android:textSize="13sp"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#F3F4F3F3"/>
                            <LinearLayout

                                android:gravity="center"
                                android:layout_weight="1.5"
                                android:layout_width="0dp"
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2"
                                    android:layout_marginTop="6dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_weight="1.3"
                                        android:layout_width="0dp"
                                        android:text="Flight Info"
                                        android:textSize="12sp"
                                        android:padding="3dp"
                                        android:gravity="right"
                                        android:textColor="#37DFF4"
                                        android:layout_height="wrap_content"/>
                                    <ImageView
                                        android:layout_weight="0.2"
                                        android:layout_width="0dp"
                                        android:src="@drawable/baseline_error_outline_24"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:text="From"
                                        android:textColor="#ED2828"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:gravity="center_horizontal"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:hint="$ 318.00"
                                    android:textSize="13sp"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>





    </LinearLayout>

</LinearLayout>